doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" type="text/css" href="/css/bootstrap/css/style.css")
    link(rel="stylesheet" type="text/css" href="/officeregistration.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" type="text/css" href="/css/bootstrap/css/bootstrap.min.css")
    title Edit Product Form.
  body
    div(w3-include-html="/includes/customnav.html")
each product in products
    .container
      form(name="mydata" action="/addproduct/update/"+product._id method="POST" enctype="multipart/form-data")
        h3.text-center.text-primary.mb-5
          i.fa.fa-id-card  EDIT PRODUCT FORM.
        .form-row
          .col-md-6.mb-3
            label(for="names") Product Name
            input#names.form-control(type="text" name="names" value=product.names)
            #names_err.error
          .col-md-6.mb-3
            label(for="ward") Ward Name.
            input#ward.form-control(name="ward" value=product.ward)
            //- select#ward.custom-select(name="ward" value=product.ward)
            //-   option(selected="" value= product.ward) -- Ward of Product --
            //-   option(value=product.ward) Ward One
            //-   option(value=product.ward) Ward Two
            //-   option(value=product.ward) Ward Three
            //-   option(value=product.ward) Ward Four
            #ward_err.error
        .form-row
          .col-md-6.mb-3
            label(for="date") Date
            input#date.form-control(type="date" name="date" value=product.date)
            #date_err.error
          .col-md-6.mb-3
            label(for="price") Unit Price
            .input-group
              .input-group-prepend
                span#basic-addon1.input-group-text Ugx.
              input#price.form-control(type="text" name="price" aria-label="Username" aria-describedby="basic-addon1" value=product.price)
            #price_err.error
        .form-row
          .col-md-6.mb-3
            label(for="quantity") Quantity
            input#quantity.form-control(type="text" name="quantity" value=product.quantity)
            #quantity_err.error
          .col-md-6.mb-3
            label(for="product") Product Type
            //- select#product.custom-select(name="product")
            input#product.form-control(type="text" name="product" value=product.product)
            //-   option(selected="" value="-- Product Type --") -- Product Type --
            //-   option(value="Organic") Organic
            //-   option(value="None Organic") None Organic
            #product_err.error
        .form-row
          .col-md-6.mb-3
            label(for="payment") Mode Of Payment
            input#payment.form-control(type="text" name="payment" value=product.payment)
            //- select#payment.custom-select(name="payment")
            //-   option(selected="" value="-- Mode Of Payment --") -- Mode Of Payment --
            //-   option(value="Cash") Cash
            //-   option(value="Mobile Money") Mobile Money
            #payment_err.error
          .col-md-6.mb-3
            label(for="input") Upload Image
            input#uploadimage.form-control(type="file" name="uploadimage" value=product.uploadimage)
            #uploadimage_err.error
        .form-row
          .col-md-6.mb-3
            label(for="delivery") Mode Of Delivery
            input#delivery.form-control(name="delivery" value=product.delivery)
            #delivery_err.error
          .col-md-6.mb-3
            label(for="directions") Directions
            input#directions.form-control(type="text" name="directions" value=product.directions)
            #directions_err.error
        .form-row
          .col-md-12.mb-1
            label(for="description") Description
            input#description.form-control(type="text" name="description" value=product.description)
            #description_err.error
        button.btn.btn-primary(type="submit" onclick="addProduct()") Register
    script(src="/validateAddproduct.js")
    // Bootstrap being added to js
    script(src="js/bootstrap/js/jquery-3.5.1.slim.min.js")
    script(src="js/bootstrap/js/popper.min.js")
    script(src="js/bootstrap/js/bootstrap.js")
    // Top navigation bar
    script(src="/includes/nav.js")